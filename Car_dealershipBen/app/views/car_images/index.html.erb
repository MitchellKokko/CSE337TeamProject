<div class="colorfy">
<h1>Listing car_images</h1>


<table>
  <tr>
    <th>Car</th>
    <th>Image url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @car_images.each do |car_image| %>
  <tr>
    <td><%= Manufacturer.find(Car.find(car_image.car_id).make).name %> <%= Car.find(car_image.car_id).model%></td>
    <td><%= image_tag car_image.image_url, :width => '200' %></td>
    <td><%= link_to 'Show', car_image %></td>
    <td><%= link_to 'Edit', edit_car_image_path(car_image) %></td>
    <td><%= link_to 'Destroy', car_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Car image', new_car_image_path %>
</div>