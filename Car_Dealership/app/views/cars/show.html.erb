<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", cars_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_car_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", car_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.car.make", :default => t("activerecord.labels.make", :default => "Make")) %>:</b>
          <%= @car.make %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.car.model", :default => t("activerecord.labels.model", :default => "Model")) %>:</b>
          <%= @car.model %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.car.year", :default => t("activerecord.labels.year", :default => "Year")) %>:</b>
          <%= @car.year %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.car.miles", :default => t("activerecord.labels.miles", :default => "Miles")) %>:</b>
          <%= @car.miles %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.car.style", :default => t("activerecord.labels.style", :default => "Style")) %>:</b>
          <%= @car.style %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.car.description", :default => t("activerecord.labels.description", :default => "Description")) %>:</b>
          <%= @car.description %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.car.color", :default => t("activerecord.labels.color", :default => "Color")) %>:</b>
          <%= @car.color %>
        </p>

      <!--  <p>
          <b><%= t("activerecord.attributes.car.string", :default => t("activerecord.labels.string", :default => "String")) %>:</b>
          <%= @car.string %>
        </p>
            -->
        <p>
          <b><%= t("activerecord.attributes.car.vin", :default => t("activerecord.labels.vin", :default => "Vin")) %>:</b>
          <%= @car.vin %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.car.price", :default => t("activerecord.labels.price", :default => "Price")) %>:</b>
          <%= @car.price %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_car_path(@car), :class => "button" %> 
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), car_path(@car), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>